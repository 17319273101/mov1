      <div class="container">
          <div class="row">
            <div class="col-xs-6 col-xs-offset-3">
                <h2 class="page-header">新增电影</h2>
                <!-- 提交表单链接 -->
                <form action="/movies/lists" method="POST">
                    <div class="form-group">
                      <label for="exampleInputEmail1">电影名字</label>
                      <input type="text" class="form-control" id="exampleInputEmail1" name="name">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">上映地区</label>
                      <input type="text" class="form-control" id="exampleInputPassword1" name="area">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">上映时间</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" name="public_time">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">电影简介</label>
                        <textarea class="form-control" rows="3" name="intro"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">标签</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" name="tags">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">读取路径</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" name="path">
                    </div>
                    <!-- <div class="form-group">
                      <label for="exampleInputFile">上传图片</label>
                      <input type="file" id="exampleInputFile" name="img">
                    </div> -->
                    <hr>
                    <button type="submit" class="btn btn-primary btn-block">添加</button>
                  </form>
                  <div class="h-40"></div>
                  <div class="h-40"></div>
                  <div class="h-40"></div>
                  <div class="h-20"></div>
            </div>
